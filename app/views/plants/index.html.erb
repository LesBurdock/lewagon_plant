

<div>
  <div class="banner">
      <img class ="banner_img" src='https://images.unsplash.com/photo-1536882240095-0379873feb4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1351&q=80'/>
      <h2 class="header_text">Are You a Plant Happy Person?</h2>
      <div class="box"></div>
  </div>

  <div class = 'about_box'>
    <div class ="search">
      <h2>Search for Plants in your City</h2>
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
        </button>
     </div>
      <% end %>
   </div>

    <div class ="about">
      <h2>Find a Plant Sitter for your plant</h2>
      <button class = "btn btn-ghost"> <% if policy(Plant).new? %>
      <%= link_to 'Create Plant Listing', new_plant_path, class: "button" %>
      <% end %></button>
    </div>
 </div>

  <div class ="box_for_cards">

    <div id="grid">
          <% @plants.each do |plant| %>
          <div class= "cards">
          <div class = "card_trip">
            
            <div class="card_image">
             <%= cl_image_tag("#{plant.photo}",class: "card_image") %>
            </div>
            
            <div class="card-trip-infos">
                 <%= link_to plant.name, plant %>
            </div>

             <div class = "m-3" id = "links">
                  <span class= "m-2">
                  <% if policy(plant).edit? %>
                    <%= link_to image_tag('edit.png',width:30), edit_plant_path(plant) %>
                  <% end %>
                  </span>

                  <span class= "m-2">
                    <% if policy(plant).destroy? %>
                      <%= link_to image_tag('bin.png',width:30), plant,
                          method: :delete, data: {
                          confirm: 'Are you sure?' }%>
                    <% end %>
                 </span>
              </div>
          </div>
      </div>
    <% end %>
</div>
</div>
</div>



