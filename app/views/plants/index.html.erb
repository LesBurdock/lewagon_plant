<h1> Plants index page</h1>
<table>
  <thead>
    <tr>
      <th>Plant Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td>
        <!--   if policy(Plant).show? -->
          <%= link_to 'Show', plant %>
         <!--  end -->
        </td>
        <td>
          <% if policy(Plant).create? %>
          <%= link_to "New plant", new_plant_path
            %>
          <% end %>
        </td>
        <td>
          <% if policy(Plant).edit? %>
          <%= link_to 'Edit', edit_plant_path(plant)
            %>
          <% end %>
        </td>
        <td>
          <% if policy(plant).destroy? %>
          <%= link_to 'Destroy', plant,method: :delete, data: {confirm: 'Are you sure?'}
             %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Plant).new? %>
<%= link_to 'New Plant', new_plant_path %>
<% end %>
