<div class = "gallery">
  <%= cl_image_tag("#{@plant.photo}",class: "img_preview") %>
  <%= cl_image_tag("#{@plant.photo}",class: "img_preview2") %>
  <%= cl_image_tag("#{@plant.photo}",class: "img_preview3") %>
</div>

<div class="show_page_container">
  <div class= "text_container">
    <div class = 'title'>
      <h2><%= @plant.name %></h2>
    </div>

    <div class= "text_box">
      <p> <%= image_tag("cactus", class: "icon") %><h4>Plant Description</h4></p>
      <%= @plant.description %>
    </div>

    <div class= "text_box">
      <p><%= image_tag("growth", class: "icon") %><h4>Plant Care</h4></p>
      <%= @plant.care_instructions %>
    </div>

    <div class= "text_box">
      <%= link_to "Make a Booking",  new_plant_booking_path(@plant), class: "btn btn-ghost" %>
    </div>

</div>
<div
  id="map"
  style="width: 100%;
  height: 600px; right: 400px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
